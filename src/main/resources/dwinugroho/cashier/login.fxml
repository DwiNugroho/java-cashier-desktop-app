<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minWidth="300.0" spacing="24.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dwinugroho.cashier.controllers.Login">
   <children>
      <Label text="Login">
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Label>
      <VBox maxWidth="400.0" spacing="8.0">
         <children>
            <VBox spacing="4.0">
               <children>
                  <Label text="Username">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin></Label>
                  <TextField fx:id="usernameField" promptText="Masukkan username...">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin></TextField>
                  <Label fx:id="usernameError" textFill="RED">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </VBox>
            <VBox spacing="4.0">
               <children>
                  <Label text="Password">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Label>
                  <PasswordField fx:id="passwordField" promptText="Masukkan password...">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin></PasswordField>
                  <Label fx:id="passwordError" textFill="RED">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </VBox>
            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#loginHandler" text="Login">
               <VBox.margin>
                  <Insets />
               </VBox.margin></Button>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
